
<h1>Update User</h1>

{{#if serverError}}
    <div class="alert alert-danger">{{serverError}}</div>
{{/if}}

<form action="" method="POST">
  <div class="form-group">
    <label for="">Title</label>
    <input type="text" name="Title" class="form-control" id="" value="{{user.Title}}">
  </div>

  <div class="form-group">
    <label for="">Description</label>
    <input type="text" name="Description" class="form-control" id="" value="{{user.Description}}">
  </div>
  <div class="form-group">
    <label for="">Start Date And Time</label>
    <input type="datetime-local" name="StartDateandTime" class="form-control" id="" value="{{user.StartDateandTime}}">
  </div>
  <div class="form-group">
    <label for="">End Date And Time</label>
    <input type="datetime-local" name="email" class="form-control" id="" value="{{user.EndDateandTime}}">
  </div>
  <div class="form-group">
    <label for="">Priority</label>
    <input type="number" name="Priority" class="form-control" id="" value="{{user.Priority}}">
  </div>
  <div class="form-group">
    <label for="">Status</label>
    <input type="text" name="Status" class="form-control" id="" value="{{user.Status}}">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary"> Update user </button>
  </div>
</form>